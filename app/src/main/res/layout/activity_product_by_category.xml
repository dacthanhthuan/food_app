<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductByCategory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/design_search"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_back_24" />

        <EditText
            android:id="@+id/ProductByCategori_edtSearch"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/design_search"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="5dp"
            android:hint="Tìm món ăn yêu thích"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#2B2222"
            android:translationZ="1dp" />

        <ImageView
            android:id="@+id/speakButton_category"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-45dp"
            android:src="@drawable/voice"
            android:translationZ="2dp" />

        <ImageView
            android:id="@+id/shop_cart_category"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cart" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductByCategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />


</LinearLayout>